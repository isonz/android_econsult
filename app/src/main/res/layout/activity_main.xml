<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <include
        android:id="@+id/navigation_layout"
        layout="@layout/navigation"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp">

            <ImageView
                android:id="@+id/index_inquiry"
                android:layout_width="78dp"
                android:layout_height="71dp"
                android:layout_weight="1"
                android:contentDescription="@string/index_inquiry"
                android:gravity="end"
                android:src="@drawable/index_inquiry"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/index_inquiry_word"
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:layout_weight="1"
                android:text="@string/index_inquiry"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp">

            <ImageView
                android:id="@+id/index_visit"
                android:layout_width="78dp"
                android:layout_height="71dp"
                android:contentDescription="@string/index_visit"
                android:src="@drawable/index_visit"
                android:layout_weight="1"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/index_visit_word"
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:text="@string/index_visit"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp">

            <ImageView
                android:id="@+id/index_my_doctor"
                android:layout_width="78dp"
                android:layout_height="71dp"
                android:contentDescription="@string/index_my_doctor"
                android:src="@drawable/index_my_doctor"
                android:layout_weight="1"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/index_my_doctor_word"
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:text="@string/index_my_doctor"
                android:textColor="#ffffff"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="20sp" />

        </TableRow>


    </TableLayout>

</android.support.constraint.ConstraintLayout>