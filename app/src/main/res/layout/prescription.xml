<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="20dp">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:minHeight="150dp"
            android:layout_marginBottom="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="药品由 XXXX 大药房平台提供并发货"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/radius5"
                android:minHeight="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/svg_add"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&lt;添加地址&gt;"
                        android:textColor="#666666" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址：广东省广州市天河区珠江新城高德置地广场1298"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话：18812345678"
                    android:textColor="#666666" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱：ison@onionm.com"
                    android:textColor="#666666" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="top"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:background="@drawable/radius5"
                android:minHeight="150dp"
                android:layout_marginBottom="20dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prescription"
                    android:textAlignment="center"
                    android:textColor="@color/gray3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    android:background="#eeeeee"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:layout_weight="5"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:text="@string/drug_name"
                            android:textAlignment="center"
                            android:textColor="@color/gray3"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:text="@string/number"
                            android:textAlignment="center"
                            android:textColor="@color/gray3"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:text="@string/price"
                            android:textAlignment="center"
                            android:textColor="@color/gray3"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:layout_weight="5"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:text="@string/drug_name"
                            android:textAlignment="center"
                            android:textColor="@color/gray3"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:text="@string/number"
                            android:textAlignment="center"
                            android:textColor="@color/gray3"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:text="@string/price"
                            android:textAlignment="center"
                            android:textColor="@color/gray3"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp" />

                    </TableRow>



                </TableLayout>

            </LinearLayout>


            <Button
                android:id="@+id/prescription_pay_submit"
                style="@style/zButton"
                android:layout_height="30dp"
                android:layout_width="match_parent"
                android:text="@string/ok_pay" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>